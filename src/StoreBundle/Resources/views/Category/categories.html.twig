{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ url('main') }}">{% trans %}Main{% endtrans %}</a><span class="divider">/</span></li>
    <li class="active">Categories</li>
{% endblock %}

{% block content %}
    <h1>View Categories</h1>
    <br/>
    <div class="col-md-6">
            <table class="table category table-bordered">
                <thead>
                <tr>
                    <th>id</th>
                    <th>Category name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        <a href="{{ path('new_category') }}" class="btn btn-success">Add new</a>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    {% javascripts '@StoreBundle/Resources/public/js/categories.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

